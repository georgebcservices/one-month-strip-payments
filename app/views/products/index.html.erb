<% content_for :head do %>
<%= image_tag( 'header-image.jpg', alt: 'View all Courses' ) %>
<%end %>

<article id="details-article" class="col-sm-12">
 	<h1 id="article-title"> Our Courses </h1>
</article>



<section id="products">
 <% @products.each do |product| %>
 	<div class="product clearfix">
   		<a href="<%=product_path (product) %>">
   			<div class="product-image-container">
				<%= image_tag(asset_path product.product_image) %>
   				<span class="product-price">$<%= product.price %></span>
			</div>
   			 <p class="product-title"><%= product.title %></p>
   		</a>
 	</div>
 
 <% end %>

</section>